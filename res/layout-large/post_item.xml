<?xml version="1.0" encoding="utf-8"?>  
<!-- Layout for item for post list -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/RelativeLayout"  
	android:layout_width="fill_parent"  
	android:layout_height="50dp">

   	<TextView    
   	    android:id="@+id/bookNamePostList"
		android:layout_height="40dp"  
		android:layout_width="263dp"
		android:layout_marginLeft="15dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="22" />

	<TextView  
		android:id="@+id/bookPricePostList" 
		android:layout_height="40dp"  
		android:layout_width="150dp"          
		android:layout_toRightOf="@+id/bookNamePostList"
		android:layout_marginLeft="6dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="11" /> 	
		
	<ImageView  
		android:layout_width="35dp"  
		android:layout_height="35dp"
		android:layout_toRightOf="@+id/bookPricePostList"
		android:layout_marginLeft="15dp"
		android:layout_centerVertical="true"
		android:src="@drawable/ic_action_good"
		android:contentDescription="@string/open" />  
		
	<TextView  
		android:id="@+id/likeNumPostList" 
		android:layout_height="40dp"  
		android:layout_width="wrap_content"          
		android:layout_toRightOf="@+id/bookPricePostList"
		android:layout_marginLeft="60dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="4" />
	
</RelativeLayout>