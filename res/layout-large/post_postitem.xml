<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/RelativeLayout"  
	android:layout_width="fill_parent"  
	android:layout_height="50dp">

   	<TextView    
   	    android:id="@+id/bookNamePostList"
		android:layout_height="40dp"  
		android:layout_width="270dp"
		android:layout_marginLeft="4dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="22" />

	<TextView  
		android:id="@+id/bookPricePostList" 
		android:layout_height="40dp"  
		android:layout_width="150dp"          
		android:layout_toRightOf="@+id/bookNamePostList"
		android:layout_marginLeft="10dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="11" /> 	
		
	<ImageView  
		android:layout_width="35dp"  
		android:layout_height="35dp"
		android:layout_toRightOf="@+id/bookPricePostList"
		android:layout_marginLeft="20dp"
		android:layout_centerVertical="true"
		android:src="@drawable/ic_action_good"
		android:contentDescription="@string/open" />  
		
	<TextView  
		android:id="@+id/likeNumPostList" 
		android:layout_height="40dp"  
		android:layout_width="wrap_content"          
		android:layout_toRightOf="@+id/bookPricePostList"
		android:layout_marginLeft="65dp"
		android:layout_centerVertical="true"
		android:textSize="25sp"
		android:maxLength="4" />
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="7dp" 
		android:background="#cccccc"
		android:layout_alignParentBottom="true"/>
		
</RelativeLayout>