<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".PostListActivity" >

    <TextView
        android:id="@+id/bookdetails_titleBookDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textSize="40sp" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bookdetails_titleBookDetail"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/bookdetails_titleBookDetail"
        android:text="@string/book_detail_title"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bookdetails_coverBookDetail"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/cover"
        android:src="@drawable/ic_launcher" />
<LinearLayout 
     android:id="@+id/post_bookdetails_linear1"
     android:layout_below="@id/textView1"
     android:layout_marginTop="40dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"       
        android:textSize="25sp" 
        android:textStyle="bold"
        android:text="@string/name"/>
    <TextView
        android:id="@+id/bookdetails_nameBookDetail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout 
     android:id="@+id/post_bookdetails_linear2"
     android:layout_below="@id/post_bookdetails_linear1"
     android:layout_marginTop="40dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"       
        android:textSize="25sp" 
        android:textStyle="bold"
        android:text="@string/price"/>
    <TextView
        android:id="@+id/bookdetails_priceBookDetail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout 
     android:id="@+id/post_bookdetails_linear3"
     android:layout_below="@id/post_bookdetails_linear2"
     android:layout_marginTop="40dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bookdetails_availableBookDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"       
        android:textSize="25sp" 
        android:textStyle="bold"/>
    
</LinearLayout>
<LinearLayout 
     android:id="@+id/post_bookdetails_linear4"
     android:layout_below="@id/post_bookdetails_linear3"
     android:layout_marginTop="40dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"       
        android:textSize="25sp" 
        android:textStyle="bold"
        android:text="@string/owner"/>
    <TextView
        android:id="@+id/bookdetails_ownerBookDetail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp" />
</LinearLayout>
	<TextView
	    android:id="@+id/post_bookdetails_description"
	    android:layout_below="@id/post_bookdetails_linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"      
        android:layout_marginTop="30dp" 
        android:textSize="25sp" 
        android:textStyle="bold"
        android:text="@string/description"/>
    <ScrollView
        android:id="@+id/bookdetails_descriptionScrollBookDetail"
        android:layout_below="@id/post_bookdetails_description"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/bookdetails_descriptionBookDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp" />
    </ScrollView>

    <ImageView
        android:id="@+id/bookdetails_likeBookDetail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/bookdetails_descriptionScrollBookDetail"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/like"
        android:src="@drawable/ic_action_good" />

    <TextView
        android:id="@+id/bookdetails_likeNumBookDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookdetails_descriptionScrollBookDetail"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp" 
        android:textStyle="bold"/>

    <Button
        android:id="@+id/bookdetails_request"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookdetails_likeNumBookDetail"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button3"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
    
   <ImageView
        android:id="@+id/bookdetails_background11"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.3"
        android:background="@drawable/bg1"
        android:contentDescription="@string/image" />

</RelativeLayout>