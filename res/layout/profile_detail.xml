<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">  
	
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="@drawable/bg1"
        android:contentDescription="@string/image"
        android:alpha="0.3"/>
    
    <ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    
    <RelativeLayout 
   	 	android:layout_width="fill_parent"
   	 	android:layout_height="wrap_content">  
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/profile_photo_string"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/profile_detail_title"
        android:gravity="center"/>
  
    <ImageView 
   		android:id="@+id/profile_image"
   		android:layout_marginTop="45dp"
   		android:src="@drawable/ic_launcher"
   		android:contentDescription="@string/image"
   		android:layout_width="80dp"
  		android:layout_height="100dp"
  		android:layout_alignParentRight="true"
  		android:layout_marginRight="40dp" 
  		android:onClick="zoomInOut"/>
<LinearLayout
     android:id="@+id/profile_detail_linear1"
     android:layout_below="@id/profile_photo_string"
     android:layout_marginTop="15dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
	<TextView
	    android:id="@+id/name_string"	   
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/name"
        android:textStyle="bold"
        android:layout_marginLeft="18dp" />
	
	<TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/user_name" />
</LinearLayout>	

<LinearLayout
     android:id="@+id/profile_detail_linear2"
     android:layout_below="@id/profile_detail_linear1"
     android:layout_marginTop="15dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">	
	<TextView
        android:id="@+id/gender_string"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/gender"
        android:textStyle="bold"
        android:layout_marginLeft="18dp" />
	
	<TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/user_gender" />
</LinearLayout>	
<LinearLayout 
     android:id="@+id/profile_detail_linear3"
     android:layout_below="@id/profile_detail_linear2"
     android:layout_marginTop="15dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
	<TextView
        android:id="@+id/campus_string"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/campus"
        android:textStyle="bold"
        android:layout_marginLeft="18dp" />	
	<TextView
        android:id="@+id/campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/user_campus" />
</LinearLayout>	

<LinearLayout 
     android:id="@+id/profile_detail_linear4"
     android:layout_below="@id/profile_detail_linear3"
     android:layout_marginTop="15dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
	<TextView
        android:id="@+id/contact_string"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/contact"
        android:layout_marginLeft="18dp" />
	
	<TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/user_contact" />
</LinearLayout>	
<LinearLayout 
     android:id="@+id/profile_detail_linear5"
     android:layout_below="@id/profile_detail_linear4"
     android:layout_marginTop="15dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
	<TextView
        android:id="@+id/address_string"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/address"
        android:layout_marginLeft="18dp" />

	<TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/user_address" />
</LinearLayout>		

	<Button
	    android:id="@+id/edit_button"	    
	    android:layout_below="@id/profile_detail_linear5"
	 	android:layout_alignLeft="@+id/change_password_button"
	 	android:layout_marginTop="25dp"
	    android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
	    android:text="@string/edit"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
	    android:onClick="editProfile" />
	
	<Button 
	  	android:id="@+id/change_password_button"
	    android:layout_below="@id/edit_button"
	    android:layout_marginTop="20dp" 
	    android:layout_centerHorizontal="true"
	    android:layout_width="175dp"
        android:layout_height="40dp" 
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="@string/change_password"
        android:onClick="changePassword"/>

	<Button
	    android:id="@+id/logout_button"
	    android:layout_width="175dp"
	    android:layout_height="40dp"
	    android:layout_alignLeft="@+id/change_password_button"
	    android:layout_below="@+id/change_password_button"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/custom_button2"
	    android:gravity="center"
	    android:onClick="logOut"
	    android:text="@string/logout"
	    android:textColor="@color/white"
	    android:textSize="15sp"
	    android:textStyle="bold" />
</RelativeLayout>
</ScrollView>

</RelativeLayout>