<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".PostListActivity" >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.3"
        android:background="@drawable/bg1"
        android:contentDescription="@string/image" />

	<LinearLayout
    	android:id="@+id/post_postlist_linerlayout1"
    	android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true">      
    <EditText
        android:id="@+id/searchContent"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:inputType="text"
        android:background="@drawable/gradient_bg"
        android:textSize="18sp" />
  
    <ImageView
        android:id="@+id/searchIt"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_action_search"
        android:contentDescription="@string/image"
        android:onClick="searchPost" />
</LinearLayout> 

    <CheckBox
        android:id="@+id/rentCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_postlist_linerlayout1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="60dp"
        android:checked="true"
        android:text="@string/rent"
        android:textSize="15sp" />
    
    <CheckBox
        android:id="@+id/sellCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rentCheckBox"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:checked="true"
        android:text="@string/sell"
        android:textSize="15sp" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="318dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/rentCheckBox" >

	    <ProgressBar   
	        android:id="@+id/refreshProgress"
	        android:layout_width="15dp"  
	        android:layout_height="15dp"
	        android:layout_centerHorizontal="true" 
	        android:visibility="invisible" /> 
	         
	    <ListView
	        android:id="@+id/postlist"
	        android:layout_width="match_parent"
	        android:layout_height="303dp"
	        android:layout_centerHorizontal="true"
	        android:cacheColorHint="@android:color/black" >
	    </ListView>
	    
	    <ProgressBar
	        android:id="@+id/loadProgress"   
	        android:layout_width="15dp"  
	        android:layout_height="15dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:visibility="invisible" /> 
	        
    </RelativeLayout>

</RelativeLayout>